{
  "AllowedHosts": "*",
  "DatabaseConfiguration": {
    "OnlineShopDBConnection": "Server=.;Database=OnlineShopDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": [ "Debug", "Error", "Warning", "Info" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logger//log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedOrigins": [
    "http://localhost:4200"
  ],
  "HttpRequestSettings": {
    "HttpRequestTimeout": 30000,
    "IgnoreSSL": true
  },
  "SwaggerSettings": {
    "Name": "OnlineShop Api Management",
    "Title": "OnlineShop Api Management",
    "Description": "OnlineShop Api Management",
    "Version": [
      {
        "URL": "/swagger/v1.0/swagger.json",
        "Version": "v1.0"
      }
    ]
  },
  "JwtSettings": {
    "ValidAudience": "http://localhost:4200",
    "ValidIssuer": "http://localhost:40485",
    "SecurityKey": "StrONGKAutHENTICATIONKEy",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "RequireExpirationTime": true,
    "ExpirationTime": 60
  },
  "RestCountriesConfigurations": {
    "BaseUrl": "https://restcountries.com/v2/name/",
    "ServiceName": "RestCountries"
  }
}